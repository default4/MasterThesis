<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outermost circle with darker green -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#479458"/>
            <size
                android:width="104dp"
                android:height="104dp" />
        </shape>
    </item>
    <!-- Middle circle with medium green -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#61cf79"/>
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <!-- Innermost circle with lighter green -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#4CAF50"/>
            <size
                android:width="96dp"
                android:height="96dp" />
        </shape>
    </item>
</layer-list>