<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outermost oval with gradient stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#006400"/>
            <corners android:radius="45dp"/>
            <stroke android:width="4dp">
                <gradient
                    android:startColor="#006400"
                    android:endColor="#4CAF50"
                    android:angle="0"/>
            </stroke>
        </shape>
    </item>
    <!-- Inner oval with main color -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/>
            <corners android:radius="43dp"/>
        </shape>
    </item>
</layer-list>
