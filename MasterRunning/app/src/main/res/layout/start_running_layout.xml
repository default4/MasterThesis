<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Big Gradient Green Circle Button -->

    <!-- Small Green Circle Button Diagonal Left Down -->

    <!-- Gear Icon Inside Left Small Circle -->


    <!-- Small Green Circle Button Diagonal Right Down -->

    <Button
        android:id="@+id/btn_start_running"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/big_green_circle"
        android:text="@string/start"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <ImageButton
        android:id="@+id/smallGreenButtonLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/small_green_circle"
        android:padding="13dp"
        android:scaleType="center"
        android:src="@drawable/gear"
        app:layout_constraintEnd_toStartOf="@id/btn_start_running"
        app:layout_constraintTop_toBottomOf="@id/btn_start_running"
        tools:ignore="VisualLintWearMargin,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_go_to_statistics"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/small_green_circle"
        android:padding="13dp"
        android:scaleType="center"
        android:src="@drawable/statistics"
        app:layout_constraintStart_toEndOf="@id/btn_start_running"
        app:layout_constraintTop_toBottomOf="@id/btn_start_running"
        tools:ignore="SpeakableTextPresentCheck,VisualLintBounds" />

    <!-- Small Green Circle Button Directly Below -->
    <ImageButton
        android:id="@+id/btn_go_to_goal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/small_green_circle"
        android:padding="13dp"
        android:scaleType="center"
        android:src="@drawable/goal"
        app:layout_constraintEnd_toEndOf="@id/btn_start_running"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@id/btn_start_running"
        app:layout_constraintTop_toBottomOf="@id/btn_start_running"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
